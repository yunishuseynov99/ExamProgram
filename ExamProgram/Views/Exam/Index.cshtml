@model IEnumerable<ExamProgram.Models.Exam>

@{
    ViewData["Title"] = "Exams";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Exam</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Exam ID</th>
            <th>Subject</th>
            <th>Student</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.Id</td>
                <td>@exam.Subject.SubjectName</td>
                <td>@exam.Student.FirstName @exam.Student.LastName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = exam.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = exam.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
