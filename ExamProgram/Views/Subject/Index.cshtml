@model IEnumerable<ExamProgram.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Subject</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Subject Code</th>
            <th>Subject Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.SubjectCode</td>
                <td>@subject.SubjectName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = subject.SubjectCode })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = subject.SubjectCode })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
